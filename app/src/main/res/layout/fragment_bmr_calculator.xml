<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blz.prisoner.fitguide.ui.slideshow.BmrCalculatorFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/bodyfat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_ripple"
        android:clickable="true"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bmr">

        <ImageView
            android:id="@+id/bdyfaticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_noun_41038_cc" />

        <TextView
            android:id="@+id/bdyfattext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/bdyfaticon"
            android:text="Body Fat Calculator"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bdyfattext"
            android:layout_alignLeft="@+id/bdyfattext"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/bdyfaticon"
            android:text="The Body Fat Calculator can be used to estimate your total body fat based on specific measurements" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bmr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bodyfat"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_ripple2"
        android:clickable="true"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/bodyfat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/bmricon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/batticon" />

        <TextView
            android:id="@+id/bmrtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/bmricon"
            android:text="BMR Calculator"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bmrtxt"
            android:layout_alignLeft="@+id/bmrtxt"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/bmricon"
            android:text="BMR (Basal Metabolic Rate) represents an estimate of calories burned while resting." />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
